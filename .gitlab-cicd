stages:
  - build
  - deploy

variables:
  DOCKER_IMAGE_NAME: "$CI_REGISTRY_IMAGE:$CI_COMMIT_REF_SLUG"

before_script:
  - docker --version

build:
  image: docker:20.10.16
  stage: build
  only:
    - stable
  services:
    - docker:20.10.16-dind
  script:
    - echo "$REGISTRY_PASSWORD" | docker login -u "$REGISTRY_USER" --password-stdin "$CI_REGISTRY"
    - docker build --pull -t "$DOCKER_IMAGE_NAME" .
    - docker push "$DOCKER_IMAGE_NAME"

deploy:
  stage: deploy
  only:
    - stable
  before_script:
    - 'which ssh-agent || ( apt-get install -qq openssh-client )'
    - eval $(ssh-agent -s)
    - ssh-add <(echo "$VPS_PRIVATE_KEY")
    - mkdir -p ~/.ssh
    - '[[ -f /.dockerenv ]] && echo -e "Host *\n\tStrictHostKeyChecking no\n\n" > ~/.ssh/config'

  script:
    - echo "Deploying application..."
    - ssh "$VPS_USER"@"$VPS_HOST" -p 22 "docker login && docker-compose -f /home/factoryze/projects/banglarmath/docker-compose.yml pull && docker-compose -f /home/factoryze/projects/banglarmath/docker-compose.yml up -d"
    - echo "Application successfully deployed."

